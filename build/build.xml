<?xml version="1.0" encoding="UTF-8"?>
	<project name="ModPackClient" default="do-deploy" basedir="."  xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="${java.home}\..\lib\ant-javafx.jar"/>
				<file name="${java.home}\lib\jfxrt.jar"/>
			</filelist>
		</path>
	
		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml"      
			uri="javafx:com.sun.javafx.tools.ant"
			classpathref="fxant"/>
	</target>
	<target name="setup-staging-area">
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />
		
		<mkdir dir="externalLibs" />
		
		<copy todir="externalLibs">
			<fileset dir="${basedir}\..\lib">
				<filename name="miglayout15-swing.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="${basedir}\..\lib">
				<filename name="forms-1.3.0.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="${basedir}\..\lib">
				<filename name="fluent-hc-4.2.5.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="${basedir}\..\lib">
				<filename name="commons-lang3-3.1.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="${basedir}\..\lib">
				<filename name="commons-beanutils.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="${basedir}\..\lib">
				<filename name="ezmorph-1.0.3.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="${basedir}\..\lib">
				<filename name="httpmime-4.2.5.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="${basedir}\..\lib">
				<filename name="httpcore-4.2.4.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="${basedir}\..\lib">
				<filename name="commons-logging-1.1.1.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="${basedir}\..\lib">
				<filename name="commons-lang.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="${basedir}\..\lib">
				<filename name="commons-collections.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="${basedir}\..\lib">
				<filename name="gson-2.2.4.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="${basedir}\..\lib">
				<filename name="commons-codec-1.6.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="${basedir}\..\lib">
				<filename name="json-lib-2.2.3-MODIFIED-jdk15.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="${basedir}\..\lib">
				<filename name="httpclient-cache-4.2.5.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="${basedir}\..\lib">
				<filename name="httpclient-4.2.5.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="${basedir}\..\lib">
				<filename name="commons-cli-1.2.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="${basedir}\..\lib">
				<filename name="commons-io-2.4.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="${basedir}\..\lib">
				<filename name="LightCouch.jar"/>	
			</fileset>
		</copy>
		
		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="${basedir}\..\">
				<include name="src/**" />
			</fileset>
		</copy>
		
		<mkdir dir="projectRefs" />
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
	
		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="commons-lang3-3.1.jar"/>
				<include name="commons-io-2.4.jar"/>
				<include name="httpclient-cache-4.2.5.jar"/>
				<include name="gson-2.2.4.jar"/>
				<include name="commons-lang.jar"/>
				<include name="LightCouch.jar"/>
				<include name="httpclient-4.2.5.jar"/>
				<include name="miglayout15-swing.jar"/>
				<include name="ezmorph-1.0.3.jar"/>
				<include name="fluent-hc-4.2.5.jar"/>
				<include name="commons-beanutils.jar"/>
				<include name="forms-1.3.0.jar"/>
				<include name="httpcore-4.2.4.jar"/>
				<include name="commons-codec-1.6.jar"/>
				<include name="commons-cli-1.2.jar"/>
				<include name="commons-collections.jar"/>
				<include name="commons-logging-1.1.1.jar"/>
				<include name="json-lib-2.2.3-MODIFIED-jdk15.jar"/>
				<include name="httpmime-4.2.5.jar"/>
			</fileset>
		</copy>
	
		<!-- Copy project references -->
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="1.7" target="1.7" srcdir="build/src" destdir="build/classes" encoding="Cp1252">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
				<filelist>
					<file name="${java.home}\lib\jfxrt.jar"/>
				</filelist>
			</classpath>
		</javac>
		
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>
	
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
		
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
		
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
		
		
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="ModPackClient.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
		</fx:resources> 
		
		<fx:application id="fxApplication"
			name="PacLauncher"
			mainClass="net.petercashel.client.launcher"
			toolkit="fx"
		/>
	
		<mkdir dir="build/classes/META-INF" />
		
		
		
		<fx:jar destfile="dist/ModPackClient.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
			
			<manifest>
				<attribute name="Implementation-Vendor" value="petercashel"/>
				<attribute name="Implementation-Title" value="PacLauncher"/>
				<attribute name="Implementation-Version" value="1.0.0.1"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
		
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="false"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="ModPackClient" nativeBundles="all"
			updatemode="background" >
	
			<fx:info title="ModPackClient" vendor="petercashel"/>
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
		</fx:deploy>
		
		
	</target>
</project>
